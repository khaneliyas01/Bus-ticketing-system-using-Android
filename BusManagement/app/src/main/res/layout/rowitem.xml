<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:elevation="3dp"
    android:translationZ="2dp"
    android:background="@android:color/white">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/rowbusid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Bus id"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/rowfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowbusid"
        android:layout_marginTop="5dp"
        android:text="From"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowto"
        android:layout_below="@+id/rowfrom"
        android:layout_marginTop="5dp"
        android:text="To"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowtotalpersons"
        android:layout_below="@+id/rowto"
        android:layout_marginTop="5dp"
        android:text="Total person"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_info" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketNoLayout"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/row_ticket_no_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket no: "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowticketno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketCostLayout"
            android:layout_below="@+id/ticketNoLayout"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/row_ticket_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket cost: "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowticketcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticketCostLayout">

            <TextView
                android:id="@+id/row_ticketdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket date: "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowticketdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>
