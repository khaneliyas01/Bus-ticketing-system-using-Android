<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background23"
    tools:context="main.com.busmanagement.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Please provide login details"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editUserid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="User ID / Mobile No"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/editUserid"
        app:layout_constraintRight_toRightOf="@+id/editUserid"
        app:layout_constraintTop_toBottomOf="@+id/editUserid"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnsignin"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Sign in"
        android:background="@drawable/button6"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnsignup"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/editPassword" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Sign UP"
        android:background="@drawable/button6"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="44dp"
        app:layout_constraintRight_toRightOf="@id/editPassword"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/textLinkToAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for TC Login"
        android:visibility="gone"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toRightOf="@+id/btnsignup"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintTop_toTopOf="@+id/btnsignin" />

</android.support.constraint.ConstraintLayout>
